{
	"manifest_version": 2,

	"name": "Panorama",
	"description": "Firefox-panorama clone for Chrome",
	"version": "0.0.1",

	"browser_action": {
		"default_icon": "img/icon.png"
	},

	"background": {
		"scripts": [
			"js/libs/underscore-min.js",
			"js/panorama-core.js"
		],
		"persistent": false
	},

	"permissions": [
		"alarms",
		"background",
		"storage",
		"tabs",
		"<all_urls>"
	],

	"content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
